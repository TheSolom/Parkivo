{
    "name": "parkivo",
    "version": "1.0.0",
    "description": "Smart companion for parking and garage management.",
    "homepage": "https://github.com/TheSolom/Parkivo#readme",
    "bugs": {
        "url": "https://github.com/TheSolom/Parkivo/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TheSolom/Parkivo.git"
    },
    "license": "UNLICENSED",
    "author": "TheSolom",
    "type": "module",
    "private": true,
    "scripts": {
        "format:api": "npm run format --workspace=apps/api",
        "lint:api": "npm run lint --workspace=apps/api",
        "build:api": "npm run build --workspace=apps/api",
        "start:dev:api": "npm run start:dev --workspace=apps/api",
        "start:prod:api": "npm start --workspace=apps/api",
        "test:api": "npm test --workspaces=apps/api"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": [
                "ts-jest",
                {
                    "useESM": true
                }
            ]
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "extensionsToTreatAsEsm": [
            ".ts"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix --max-warnings=0",
            "prettier --write"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.3.0",
        "eslint": "^10.0.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-jest": "^29.15.0",
        "eslint-plugin-n": "^17.24.0",
        "eslint-plugin-unused-imports": "^4.4.1",
        "globals": "^17.3.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "jest-environment-node": "^30.2.0",
        "lint-staged": "^16.2.7",
        "pino-pretty": "^13.1.3",
        "prettier": "^3.8.1",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.0"
    },
    "dependencies": {
        "http-status-codes": "^2.3.0",
        "pino": "^10.3.1"
    }
}
